# config/urls.py
from django.contrib import admin
from django.urls import path, include
from pages.views import home # <-- IMPORTE A NOVA VIEW
from django.conf import settings # <-- IMPORTE
from django.conf.urls.static import static # <-- IMPORTE

urlpatterns = [
    # Rota para a Homepage
    path('', home, name='home'), # <-- URL PARA HOME

    path('admin/', admin.site.urls), # <-- URL PARA ADMIN
    
    path('portfolio/', include('portfolio.urls')), # <-- URL PARA PORTIFOLIO
    
    path('blog/', include('blog.urls')), # <-- URL PARA BLOG
    
    path('ia/', include('ai_search.urls')), # <-- URL PARA AI SEARCH

    # Qualquer URL que não seja /admin/ será procurada no app 'pages'
    path('', include('pages.urls')),
]

# Adiciona a rota para servir arquivos de mídia em modo de desenvolvimento
if settings.DEBUG:
    urlpatterns += static(settings.MEDIA_URL, document_root=settings.MEDIA_ROOT)